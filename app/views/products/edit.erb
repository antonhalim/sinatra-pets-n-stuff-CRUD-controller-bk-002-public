<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <h1>Editing Product</h1>
    <form action="/products/<%= @product.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" value="<%= @product.title %>" name="product[title]">
      </div>
      <div class="form-group">
        <label for="slug">Slug</label>
        <input type="text" class="form-control" value="<%= @product.slug %>" name="product[slug]">
      </div>
      <div class="form-group">
        <label for="price">Price</label>
        <input type="text" class="form-control" value="<%= @product.price %>" name="product[price]">
      </div>
      <input type="submit" value="Submit" class="btn btn-default">
    </form>
    <p class="button-padding"><a href="/products/<%= @product.id %>" class="btn btn-default">&laquo; Back</a></p>
  <div>
</div>